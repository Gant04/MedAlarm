<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="concentric.medalarm.activity.AlarmActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ActionBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/medName"
        android:textAlignment="center"
        android:id="@+id/editText"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/wednesday"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Th"
        android:id="@+id/thursday"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/wednesday"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/friday"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/thursday"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sa"
        android:id="@+id/saturday"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/friday"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu"
        android:id="@+id/tuesday"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/wednesday"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/monday"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tuesday"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su"
        android:id="@+id/thelordsday"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/monday"/>

</RelativeLayout>
